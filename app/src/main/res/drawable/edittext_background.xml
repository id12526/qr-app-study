<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние при фокусе -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Внешний слой: градиентная обводка -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#4A90E2"
                        android:endColor="#5DADE2"
                        android:angle="90" />
                    <corners android:radius="16dp" />
                </shape>
            </item>

            <!-- Внутренний слой: фон -->
            <item
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"
                android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/light_accent" />
                    <corners android:radius="15dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Состояние по умолчанию -->
    <item>
        <shape>
            <solid android:color="@color/light_accent" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</selector>