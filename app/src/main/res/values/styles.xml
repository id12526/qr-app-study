<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Базовая тема приложения -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Цвет выделенного текста -->
        <item name="colorControlActivated">#0080FF</item>
        <!-- Цвет "капель" -->
        <item name="android:textColorHighlight">#96BFFF</item>
        <!-- Цвет текста -->
        <item name="android:textColor">#000000</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="CustomDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/gradient_2</item>
        <item name="android:background">@drawable/dialog_button_background</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/CustomDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomDialogButtonStyle</item>
    </style>
</resources>
