<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Scaner" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Цвет капель -->
        <item name="colorControlActivated">#0080FF</item>
        <!-- Цвет выделения -->
        <item name="android:textColorHighlight">#CDDBFF</item>
        <!-- Цвет текста -->
        <item name="android:textColor">#000000</item>
        <!-- Цвет фона Splash Screen -->
        <item name="windowSplashScreenBackground">@color/white</item>
        <!-- Иконка Splash Screen -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
    </style>
    <style name="SpinnerPopupTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:popupBackground">@color/popUp</item>
    </style>
    <style name="Theme.Scaner" parent="Base.Theme.Scaner" />
</resources>