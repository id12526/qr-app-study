<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/blue_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="parent" />

    <!-- Надпись "Авторизация" -->
    <TextView
        android:id="@+id/auth_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Авторизация"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="90dp" />

    <!-- Блок авторизации (белая подложка с тенью) -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/auth_title"
        app:layout_constraintBottom_toTopOf="@id/button_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:padding="20dp">

            <!-- Поле ввода логина -->
            <EditText
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edittext_background"
                android:layout_marginBottom="20dp"
                android:hint="Введите логин"
                android:gravity="start|center_vertical"
                android:padding="14dp"
                android:maxLines="1"
                android:singleLine="true"
                android:elevation="2dp"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="8dp"
                android:textColor="@color/black"
                android:stateListAnimator="@animator/edittext_focus_animator" />

            <!-- Поле ввода пароля -->
            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edittext_background"
                android:hint="Введите пароль"
                android:gravity="start|center_vertical"
                android:padding="14dp"
                android:maxLines="1"
                android:singleLine="true"
                android:drawableStart="@drawable/ic_password"
                android:elevation="2dp"
                android:drawablePadding="8dp"
                android:layout_marginBottom="-10dp"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:drawableEnd="@drawable/ic_eye_off"
                android:stateListAnimator="@animator/edittext_focus_animator" />

            <!-- Кнопка "Запомнить меня" -->
            <CheckBox
                android:id="@+id/remember_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Запомнить меня"
                android:textSize="16sp"
                android:padding="5dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="25dp" />

            <!-- Кнопка "Войти" -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/signInButton"
                android:layerType="software"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Войти"
                android:textSize="22sp"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:background="@drawable/button_gradient"
                android:gravity="center"
                android:elevation="4dp"
                android:foreground="?attr/selectableItemBackground"
                android:stateListAnimator="@animator/button_scale_animator" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Текст внизу -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="@null"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Первый текст -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Еще нет аккаунта? "
            android:textSize="16sp"
            android:elevation="2dp"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <!-- Кликабельный текст -->
        <TextView
            android:id="@+id/register_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:minHeight="48dp"
            android:elevation="2dp"
            android:text="@string/underline_text"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:stateListAnimator="@animator/link_reg_animator" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>