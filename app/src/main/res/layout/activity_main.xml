<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Новый блок с кнопкой справа и текстом -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/avatarImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle_background"
            android:src="@drawable/default_avatar"
            android:contentDescription="Аватарка пользователя"
            android:scaleType="centerCrop"
            android:clipToOutline="true" />

        <!-- Текст заголовка -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Главная страница"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical"
            android:paddingStart="12dp" />

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_logout"
            android:contentDescription="Back button"
            android:elevation="4dp"
            android:scaleType="center"
            android:adjustViewBounds="true" />
        <!-- Круглый ImageView для аватарки -->
    </LinearLayout>

    <!-- Остальная часть разметки -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Заголовок -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добро пожаловать"
            android:textSize="38sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="22dp" />

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Отсканируйте QR-код нужного предмета для получения дополнительной информации о нем"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="150dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Кнопка "Список товаров" с текстом -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="16dp">

                <ImageButton
                    android:id="@+id/mainCategory"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_product_list"
                    android:background="?android:attr/selectableItemBackground"
                    android:contentDescription="Список товаров"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvProductList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Список"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Кнопка "Сканер" с текстом -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="16dp">

                <ImageButton
                    android:id="@+id/mainOpenScanner"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_qr_scanner"
                    android:background="?android:attr/selectableItemBackground"
                    android:contentDescription="Сканер QR-кодов"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvScanner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сканер"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/mainAdmin"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/black"
            android:text="ADMIN PANEL"
            android:textSize="18sp"
            android:textColor="@color/white"
            app:cornerRadius="30dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>